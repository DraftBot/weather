{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "pretty": true,
    "noEmitOnError": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "newLine": "lf",
    "sourceMap": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "outDir": "./lib",
    "lib": ["esnext"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "tests/*"]
}
